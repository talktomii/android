<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FurnitureMarket" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Theme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:dividerHeight">1dp</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>

    <style name="Theme.FurnitureMarket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

<!--        <item name="android:windowBackground">@drawable/ic_rectangle</item>-->
    </style>

    <style name="Theme.FurnitureMarket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FurnitureMarket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>