<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.furniture.ui.settings.SettingsVM" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="1"
            android:fontFamily="@font/inter_extra_bold"
            android:text="Settings"
            android:textFontWeight="700"
            android:textSize="@dimen/dp_24"
            android:textStyle="bold"
        />

        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_20"
                android:src="@drawable/setting_account_icon"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_20">
            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Account"
                android:layout_weight="400"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:src="@drawable/right_arrow"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_15">

            </androidx.appcompat.widget.AppCompatImageView>




        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/gray"
            tools:layout_editor_absoluteX="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_20"
                android:src="@drawable/setting_privacy_icon"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_20">
            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Privacy and safety"
                android:layout_weight="400"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:src="@drawable/right_arrow"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_15">

            </androidx.appcompat.widget.AppCompatImageView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/gray"
            tools:layout_editor_absoluteX="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_20"
                android:src="@drawable/setting_notification_icon"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_20">
            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Notifications"
                android:layout_weight="400"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:src="@drawable/right_arrow"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_15">

            </androidx.appcompat.widget.AppCompatImageView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/gray"
            tools:layout_editor_absoluteX="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_20"
                android:src="@drawable/setting_general_icon"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_20">
            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:text="General"
                android:layout_weight="400"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:src="@drawable/right_arrow"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_15">

            </androidx.appcompat.widget.AppCompatImageView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/gray"
            tools:layout_editor_absoluteX="10dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_20"
                android:src="@drawable/setting_display_icon"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_20">
            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:text="Display"
                android:layout_weight="400"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/dp_16"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp_15"
                android:src="@drawable/right_arrow"
                android:layout_gravity="center"
                android:layout_height="@dimen/dp_15">

            </androidx.appcompat.widget.AppCompatImageView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/gray"
            tools:layout_editor_absoluteX="10dp" />

    </LinearLayout>
</layout>